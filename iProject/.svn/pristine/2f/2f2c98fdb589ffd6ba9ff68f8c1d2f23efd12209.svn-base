<%@page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8"%>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko" xml:lang="ko">
<%-- start head --%>
<head>
<title>공지사항</title>
<%@ include file="/include/taglibs.jsp"%>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" type="text/css" href="css/sub.css" />
<link rel="stylesheet" type="text/css" href="css/common.css" />
<script type="text/javascript" src="js/common.js"></script>
<script type="text/javascript" language="javascript" src="js/jquery-1.7.2.min.js"></script>

<%-- 자바 스크립트 커스텀 함수  --%>
<script type="text/javascript">
	$(document).ready(function(){
		// 글쓰기폼
		$("#writeFormBtn").click(function(){
			$("#inputType").val("insert");
			$("#form").attr("action","noticeInputForm.action").submit();
		});
		
		// 검색
		$("#boardSearchBtn").click(function(){
			$("#curPage").val(1);
			$("#form").attr("action","noticeList.action").submit();
		});
		
	});
	
	// 페이지 검색
	function searchPage(cPage) {
		$("#curPage").val(cPage);
		$("#form").attr("action","noticeList.action").submit();
	}
		
	function onView(boardNo){
		$("#sseq").val(boardNo);
		$("#form").attr("action","noticeView").submit();
	}
</script>

</head>
<%-- finish head --%>

<%-- start body --%>
<body style="background: url(images/sub/sub_bg.jpg) repeat-x top center;">
<div align="center">
		

	<div id="wrap">
		<div id="skipToContent">
			<a href="#container" accesskey="1"
				title="브라우저에 따라 Alt + 1 또는 Alt + Shift + 1 또는 Shift + Esc + 1 후 Enter를 치시면 본문내용으로 바로갑니다.">본문 바로가기</a>
		</div>
		<div id="header"
			style="background: url(images/top/top_bg.png) no-repeat;">

			<%@ include file="../include/top.jsp"%>
			<%-- //lnb --%>
		</div>
		<%-- header --%>

		<div id="container">
			<div class="sub_vjr"></div>
			<%-- //sub_vjr --%>
			<span class="sub_vjr"><img
				src="images/sub/sub_visual_5.png" width="970" height="207" /></span>
			<div class="leftcolumn">
			<div id="snb">
				<h2><img src="images/menu/left_title_04.jpg" width="200" height="36" /></h2>
				<ul>
				    <li><a href="noticeList" class="on">공지사항</a></li>
						<li><a href="QNA_List">Q&A(A/S접수)</a></li>
						<li><a href="FAQ_List">FAQ</a></li>
				</ul>
			</div>
			<div><a href="#"><img src="images/common/left_banner_01.jpg" width="200" height="120" /></a></div>
		</div>
			<%-- //leftcolumn --%>

			<div class="rightcolumn">
				<div class="top_tit">
					<h3>
						<img src="images/menu/title_05_01.jpg" alt="" width="400" height="50" />
					</h3>
					<div class="location">
						<span class="hide">페이지 위치 : </span> <a href="#url"><img
							src="images/common/ico_home.jpg" width="11" height="11"
							style="vertical-align: middle" /> HOME</a> &gt; <a href="#url">게시판</a>
						&gt; <strong>공지사항</strong>
					</div>
				</div>

				<%-- //top_tit --%>
				<div class="content">
					<form name="searchForm" action="" method="post" id="form">
			<input type="hidden" name="sseq" id="sseq" value="0" /> 
			<input type="hidden" name="curPage" id="curPage" value="${boardVO.curPage}"/>
			<input type="hidden" name="inputType" id="inputType" value="" />
			<p>
				<select name="searchType" id="searchType">
					<option value="">전체검색</option>
					<option value="SUBJECT">제목</option>
					<option value="WRITER">작성자</option>
				</select>
				<input type="text" name="searchString" id="searchString" value="${boardVO.searchString}" />
				<input type="button" value="검색" id="boardSearchBtn" />
			</p>
		</form>
		<br/>
					<table class="b_list" cellspacing="0" summary="번호, 작성자, 제목, 등록일,  게시판 리스트">

						<colgroup>
							<col width="100" />
							<col width="*" />
							<col width="70" />
							<col width="90" />
							<col width="100" />
						</colgroup>
						<thead>
							<tr>
								<th scope="col">번호</th>
								<th scope="col">제목</th>
								<th scope="col">첨부파일</th>
								<th scope="col">등록일</th>
								<th scope="col">조회수</th>
							</tr>
						</thead>
						<%--  블라블라 포문 돌아야 할듯  --%>
						<tbody>
						<c:choose>
							<c:when test="${empty list}">
								<tr>
									<td align="center" colspan="5">등록된 게시물이 없습니다.</td>
								</tr>
							</c:when>
							<c:otherwise>
								<c:forEach var="list" items="${list}">
							<%-- 게시글 --%>
							<tr>
							<%-- 글번호 --%>
								<td scope="row">${list.RNUM}</td>
							<%-- 제목   TODO--%> 
<%-- 								<td class="txt_left"><a href="javascript:onView('${list.sseq}');">${list.subject}</a></td> --%>
								<td align="left"><a href="javascript:onView('${list.sseq}');">${list.subject}</a></td>
							<%-- 첨부파일 --%>
								<td><img src="images/board/icin_p.gif" alt="첨부파일 PDF" /></td>
							<%-- 등록일 --%>
<%-- 								<td>${list.regdate}</td> --%>
								<td scope="row">
									<fmt:parseDate var="redate" value="${list.regdate}" pattern="yyyy-MM-dd" />
									<fmt:formatDate value="${redate}" pattern="yyyy-MM-dd" />
								</td>
							<%-- 조회수 --%>
								<td>${list.cnt}</td> 
							</tr>
									</c:forEach>
								</c:otherwise>
							</c:choose>
						</tbody>
							
					</table>
					<div class="pagination"><c:if test="${!empty paging}">${paging.pageHtml}</c:if></div>
						
					<%-- //pagination --%>
					<%-- 글쓰기 --%>
<%-- 					<a href="noticeInputForm" >등록</a> --%>
						<input type="button" value="새 글쓰기" id="writeFormBtn" class="bg_gry" style="cursor: pointer;" />
				</div>
				<%-- //content --%>
			</div>
			<%-- //rightcolumn --%>

		</div>
		<%-- //container --%>

	</div>
	<%-- //wrap --%>

	<div class="footer" id="footer" align="center">
		<%@ include file="../include/footer.jsp"%>
	</div>
	<%-- //footer --%>
	</div>
</body>
<%-- finish body --%>


<%-- //bg_w_body --%>
</html>