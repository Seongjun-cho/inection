<%@page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8" %>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko" xml:lang="ko">
<head>
<title>공지사항 등록</title>
<%@ include file="/include/taglibs.jsp"%>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" type="text/css" href="css/sub.css" />
<link rel="stylesheet" type="text/css" href="css/common.css" />
<script type="text/javascript" src="js/common.js"></script>
<script type="text/javascript" language="javascript" src="js/jquery-1.7.2.min.js"></script>

<%-- custom javascript --%>
<script type="text/javascript" language="javascript">
$(document).ready(function(){
	<c:if test="${boardVO.inputType == 'update'}">
		$("#BtnSave").hide(); 
		$("#BtnUpdate").show();
	</c:if>
	<c:if test="${boardVO.inputType == 'insert'}">
		$("#BtnSave").show();
		$("#BtnUpdate").hide(); 
	</c:if>
	
	//TODO
	// 목록으로
	$("#BtnList").click(function(){
		$("#form").attr("action","noticeList.action").submit();
	});
	
	// 저장
	$("#BtnSave").click(function(){
		$("#form").attr("action", "noticeSubmit").submit();
	});
	
	// 수정  
	$("#BtnUpdate").click(function(){
		$("#form").attr("action", "noticeSubmit").submit();
	});
	
});
</script>

</head>
<body  style="background:url(images/sub/sub_bg.jpg) repeat-x top center;">
<div id="wrap" >
	<div id="skipToContent"> <a href="#container" accesskey="1" title="브라우저에 따라 Alt + 1 또는 Alt + Shift + 1 또는 Shift + Esc + 1 후 Enter를 치시면 본문내용으로 바로갑니다.">본문 바로가기</a> </div>
	<div id="header" style="background:url(images/top/top_bg.png) no-repeat;">
		
		<%@ include file="../include/top.jsp" %>
		<%-- //lnb --%> 
	</div>
	<%-- //header --%>
    
  <div id="container">
		<div class="sub_vjr"></div>
		<%-- //sub_vjr --%>
		<span class="sub_vjr"><img src="images/sub/sub_visual_5.png" width="970" height="207" /></span>
		<div class="leftcolumn">
			<div id="snb">
				<h2><img src="images/menu/left_title_04.jpg" width="200" height="36" /></h2>
				<ul>
				  <li><a href="noticeList" class="on">공지사항</a></li>
						<li><a href="QNA_List">Q&A(A/S접수)</a></li>
						<li><a href="FAQ_List">FAQ</a></li>
					
				</ul>
			</div>
			<div><a href="#"><img src="images/common/left_banner_01.jpg" width="200" height="120" /></a></div>
		</div>
		<%-- //leftcolumn --%>
		
		<div class="rightcolumn">
			<div class="top_tit">
				<h3><img src="images/menu/title_05_01.jpg" alt="" width="400" height="50" /></h3>
				<div class="location"> <span class="hide">페이지 위치 : </span> <a href="#url"><img src="images/common/ico_home.jpg" width="11" height="11" style="vertical-align:middle"/> HOME</a> &gt; <a href="#url">게시판</a> &gt; <strong>공지사항</strong> </div>
			</div>
			<%-- //top_tit --%>
			<div class="content">
				<form name="form" id="form" action="" method="post">
					<input type="hidden" name="inputType" value="${boardVO.inputType}" />
					<input type="hidden" name="curPage" id="curPage" value="${boardVO.curPage}"/>
					<input type="hidden" name="sseq" id="sseq" value="${boardVO.sseq}" />
			 			 <table class="b_write" cellspacing="0" summary="제목, 첨부파일, 내용 순의 글 내용">
						<caption>
						
						</caption>
						<colgroup>
						<col width="18%" />
						<col width="82%" />
						</colgroup>
						<tbody>
						<tr>
								<th scope="row"><span>
									<label class="b_title">제목</label>
									</span></th>
								<td>
								<input type="text" id="subject" name="subject" title="제목을 입력하세요" class="textinput" value="${boardVO.subject}" />
								</td>
							</tr>
							<tr>
								<th scope="row">
									<span>
										<label class="b_files">파일첨부</label>
									</span>
								</th>
								<td class="clip">
									<input type="file" name="filename" size="68" class="fileup" title="우측 버튼을 선택하여 업로드할 파일을 선택하세요" />
								</td>
							</tr>
							
							<tr>
								<th scope="row"><span>내용</span></th>
								<td colspan="3">
									<textarea cols="90" rows="10" name="content" id="content" ><c:if test="${boardVO.inputType == 'update'}">${boardVO.content}</c:if></textarea>
								</td>
							</tr>
							
						</tbody>
					</table>
					<%-- 버튼 등록  --%>
					<div class="txt_center mt10">
					 	<input type="button" value="등록" id="BtnSave" class="bg_gry" style="cursor: pointer;" />
						<input type="button" value="수정" id="BtnUpdate" class="bg_gry" style="cursor: pointer;" />
						<input type="button" value="취소" id="BtnList" class="bg_gry" style="cursor: pointer;" />
					 </div>
			</div>
			<%-- //content --%> 
		</div>
		<%-- //rightcolumn --%> 
		
  </div>
	<%-- //container --%> 
</div>
<%-- //wrap --%>
<div class="footer" id="footer" align="center">
	<%@ include file="../include/footer.jsp" %>
</div>
<%-- //footer --%>
</body>
<%-- //bg_w_body --%>
</html>